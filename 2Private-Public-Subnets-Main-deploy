# This creates a VPC with two public subnets and two private subnets in two Availability Zones, 
# together with a NAT Gateway and associated routing. Change the Availability Zone locations as needed.

# Important: this configures various AWS services and there are costs associated with these services after the Free Tier usage.
# Please see the AWS Pricing pages for details. You are responsible for any AWS costs incurred. 
# No warranty is implied in this example.

# Usage from command line:
#   aws cloudformation --region eu-west-2 create-stack --stack-name vpc- --template-body file://vpc-setup.yaml
    
    Resources:
      ## VPC
      vpc-eu-west-2-shared:
        Type: AWS::EC2::VPC
        Properties:
          CidrBlock: 10.10.0.0/16

      ## SUBNETS     
      subnet-eu-west-2a-backoffice-1:
        Type: AWS::EC2::Subnet
        Properties:
          VpcId: !Ref vpc-eu-west-2-shared
          AvailabilityZone: eu-west-2a
          CidrBlock: 10.10.1.0/24
          MapPublicIpOnLaunch: true
     
      subnet-eu-west-2b-backoffice-2:
        Type: AWS::EC2::Subnet
        Properties:
          VpcId: !Ref vpc-eu-west-2-shared
          AvailabilityZone: eu-west-2b
          CidrBlock: 10.101.102.0/24
          MapPublicIpOnLaunch: true
     
      subnet-eu-west-2a-basiton-1:
        Type: AWS::EC2::Subnet
        Properties:
          VpcId: !Ref vpc-eu-west-2-shared
          AvailabilityZone: us-east-2a
          CidrBlock: 10.10.2.0/24
          MapPublicIpOnLaunch: false
     
      subnet-eu-west-2b-basiton-2:
        Type: AWS::EC2::Subnet
        Properties:
          VpcId: !Ref vpc-eu-west-2-shared
          AvailabilityZone: us-east-2b
          CidrBlock: 10.22.102.0/24
          MapPublicIpOnLaunch: false
     
     ## INTERNET GATEWAY
      intgw-eu-west-2-basiton:
        Type: AWS::EC2::InternetGateway
      
      GatewayToInternet:
        Type: AWS::EC2::VPCGatewayAttachment
        Properties:
          VpcId: !Ref vpc-eu-west-2-shared
          InternetGatewayId: !Ref intgw-eu-west-2-basiton
      
      ## PUBLIC ROUTING
      rt-eu-west-2-basiton:
        Type: AWS::EC2::RouteTable
        Properties:
          VpcId: !Ref vpc-eu-west-2-shared
      
      PublicRoute:
        Type: AWS::EC2::Route
        DependsOn: GatewayToInternet
        Properties:
          RouteTableId: !Ref rt-eu-west-2-basiton
          DestinationCidrBlock: 10.10.0.0/16
          GatewayId: !Ref intgw-eu-west-2-basiton
     
      rt-eu-west-2-basiton-1:
        Type: AWS::EC2::SubnetRouteTableAssociation
        Properties:
          SubnetId: !Ref PublicSubnet1
          RouteTableId: !Ref rt-eu-west-2-basiton
     
      rt-eu-west-2-basiton-2:
        Type: AWS::EC2::SubnetRouteTableAssociation
        Properties:
          SubnetId: !Ref subnet-eu-west-2b-basiton-2
          RouteTableId: !Ref rt-eu-west-2-basiton
     
      ## NAT GATEWAY
      natgw-eu-west-2-backoffice:
        Type: AWS::EC2::NatGateway
        DependsOn: NatPublicIP
        Properties: 
          SubnetId: !Ref subnet-eu-west-2a-basiton-1
          AllocationId: !GetAtt NatPublicIP.AllocationId

      ## ELASTIC IP
      NatPublicIP:
        Type: AWS::EC2::EIP
        DependsOn: vpc-eu-west-2-shared
        Properties:
          Domain: vpc
     
      ## PRIVATE ROUTING
      PrivateRouteTable:
        Type: AWS::EC2::RouteTable
        Properties:
          VpcId: !Ref vpc-eu-west-2-shared
      
      PrivateRoute:
        Type: AWS::EC2::Route
        Properties:
          NatGatewayId: !Ref natgw-eu-west-2-backoffice
          RouteTableId: !Ref PrivateRouteTable
          DestinationCidrBlock: 0.0.0.0/0
     
      PrivateSubnet1RouteTableAssociation:
        Type: AWS::EC2::SubnetRouteTableAssociation
        Properties:
          SubnetId: !Ref PrivateSubnet1
          RouteTableId: !Ref PrivateRouteTable
     
      PrivateSubnet2RouteTableAssociation:
        Type: AWS::EC2::SubnetRouteTableAssociation
        Properties:
          SubnetId: !Ref PrivateSubnet2
          RouteTableId: !Ref PrivateRouteTable
